@model ClipKeep.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "./_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Auth", FormMethod.Post))
{
<fieldset>
    <div class="editor-group">
        <div class="editor-label">
            @Html.LabelFor(userModel => userModel.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(userModel => userModel.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email" }})
            @Html.ValidationMessageFor(userModel => userModel.Email)
        </div>
    </div>

    <div class="editor-group">
        <div class="editor-label">
            @Html.LabelFor(userModel => userModel.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(userModel => userModel.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Password", @type = "password" } })
            @Html.ValidationMessageFor(userModel => userModel.Password)
        </div>
    </div>

    <p>
        <input class="btn btn-primary" type="submit" value="Login" />
    </p>
    <p>
        Not got an account yet? <a href="Register">Register!</a> 
    </p>
</fieldset>
}

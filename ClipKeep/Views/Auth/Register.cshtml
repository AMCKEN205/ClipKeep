@model ClipKeep.Models.UserRegister
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Auth/_Layout.cshtml";
}

<div id="MainContentRegister">
    <div class="col-md d-flex justify-content-center text-center">
        <img src="~/Icons/check-list128.png" alt="logo " />
        <h2>@Html.Raw(ViewBag.SubText)</h2>

        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
        <fieldset>
            <div class="editor-group">
                <div class="editor-label">
                    @Html.LabelFor(registrationModel => registrationModel.Username)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(registrationModel => registrationModel.Username, new { htmlAttributes = new { @class = "form-control", @id = "Username", placeholder = "Enter Username" } })
                    @Html.ValidationMessageFor(registrationModel => registrationModel.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="editor-group">
                <div class="editor-label">
                    @Html.LabelFor(registrationModel => registrationModel.ConfirmUsername)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(registrationModel => registrationModel.ConfirmUsername, new { htmlAttributes = new { @class = "form-control", @id = "ConfirmUsername", placeholder = "Confirm Username" } })
                    @Html.ValidationMessageFor(registrationModel => registrationModel.ConfirmUsername, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="editor-group">
                <div class="editor-label">
                    @Html.LabelFor(registrationModel => registrationModel.Password)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(registrationModel => registrationModel.Password, new { htmlAttributes = new { @class = "form-control", @id = "Password", placeholder = "Enter Password", @type = "password" } })
                    @Html.ValidationMessageFor(registrationModel => registrationModel.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="editor-group">
                <div class="editor-label">
                    @Html.LabelFor(registrationModel => registrationModel.ConfirmPassword)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(registrationModel => registrationModel.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @id = "ConfirmPassword", placeholder = "Confirm Password", @type = "password" } })
                    @Html.ValidationMessageFor(registrationModel => registrationModel.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <p class="text-danger">@ViewBag.FailToRegisterError</p>
            <p>
                <input class="btn btn-primary" type="submit" value="Sign up" />
            </p>
            <p>
                Already have an account? <a href="Login">Login!</a>
            </p>
        </fieldset>
        }
    </div>
</div>


